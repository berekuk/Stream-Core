# vim:ft=perl

use warnings;
use strict;

use parent qw(Stream::Filter);

sub write_chunk {
    my ($self, $chunk) = @_;
    my $result = [
        map {
            # in-place modification! I hope it won't cause problems...
            chomp;
            s{(\\\\|\\n)}{
                ($1 eq "\\\\") ? "\\" : "\n"
            }ge;
            $_;
        } @$chunk
    ];
    return $result;
}

sub write {
    my $self = shift;
    my $chunk = $self->write_chunk([@_]);
    return unless $chunk;
    return $chunk->[0];
}

return sub {
    __PACKAGE__->new;
}
